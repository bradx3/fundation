#block.block
  %h2 Reset Password
  .content
    - form_for(@user, :url => password_resets_path, :method => :put, :html => { :class => "form" }) do |f|
      = hidden_field_tag(:id, params[:id])

      = f.error_messages

      .group
        .left= f.label(:password, nil, :class => "label")
        .right= f.password_field(:password, :class => "text_field")
        .clear 

      .group
        .left= f.label(:password_confirmation, nil, :class => "label")
        .right= f.password_field(:password_confirmation, :class => "text_field")
        .clear 

      .group.navform
        .right
          = submit_tag("Update my password and log me in", :class => "button")
        .clear
