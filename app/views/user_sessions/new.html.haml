#block-login.block
  %h2 Login
  .content.login
    - form_for(@user_session, :url => user_session_path, :html => { :class => "form login" }) do |f|
      - unless @user_session.errors.empty?
        .flash
          .message.error
            %p Incorrect Username/Login
      .group
        .left= f.label(:login, nil, :class => "label")
        .right= f.text_field(:login, :class => "text_field")
        .clear  
        
      .group
        .left= f.label(:password, nil, :class => "label")
        .right= f.text_field(:password, :class => "text_field")
        .clear 
                 
      .group.navform
        .right
          = f.check_box(:remember_me, :class => "checkbox")
          = f.label(:remember_me, nil, :class => "checkbox")
          %br
          %br
          = f.submit("Login", :class => "button")
        .clear
