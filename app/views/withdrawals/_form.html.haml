- form_for(@withdrawal, :html => { :class => "form" }) do |f|
  = f.error_messages

  - f.fields_for(:account_transactions) do |fields|
    .account
      - da = fields.object
      = fields.hidden_field :account_id, :value => da.account_id, :id => "account_#{ da.account_id }"
      = fields.label :dollars, da.account.name, :class => "label"
      .group
        $
        = fields.text_field :dollars, :class => "amount text_field"

  .group.navform
    = submit_button_for(f)
    or 
    = link_to "back", :back
      
