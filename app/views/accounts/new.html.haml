%h2.title New account

.inner
  - form_for(@account, :html => { :class => "form" }) do |f|
    .group
      = f.label :name, nil, :class => "label"
      = f.text_field :name

    .group
      = f.label :balance_in_cents, "Initial balance in cents", :class => "label"
      = f.text_field :balance_in_cents

    .group.navform
      = f.submit(@account.new_record? ? "Create" : "Update")
