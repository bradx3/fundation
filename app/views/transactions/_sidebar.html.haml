- content_for :sidebar do
  - form_tag(transactions_path, :method => :get, :class => "form") do
    .block
      %h3 Funds
      %ul.filter
        = check_box_filters_for("fund_id", current_user.family.funds)

    - if current_user.family.users.count > 1
      .block
        %h3 Users
        %ul.filter
          = check_box_filters_for("user_id", current_user.family.users)
        
    .block
      %h3 Created
      %ul.filter
        = date_filter_for(:created_at)
        %li
          = submit_tag "Update List", :class => "button"
          or
          = link_to "Reset Filters"

