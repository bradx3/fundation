!!! STRICT
%html{:xmlns=>"http://www.w3.org/1999/xhtml", :lang=>"en"}
%head
  %meta{:'http-equiv'=>"Content-Type", :content=>"text/html; charset=utf-8"}
  %title= $SITE_NAME
  = stylesheet_link_tag 'web_app_theme', "theme", "application"

%body
  #container
    #header
      %h1=link_to "<span>#{ $SITE_NAME }</span>", '/'
      #user-navigation
        %ul
          - if current_user
            %li
              - link_to edit_user_path(current_user), :id => "profile" do
                Logged in as: 
                = current_user.login
            %li= link_to "View profile", edit_user_path(current_user)
            %li= link_to 'Logout', user_session_path, :method => "delete"
          - else
            %li= link_to "Login", "/login"
          .clear    

    #box
      = yield

      = render :partial => "/layouts/footer"

  = javascript_include_tag :all, :cache => true
  = render :partial => "/layouts/tracking"