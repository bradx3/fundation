= simple_sidebar do
  %li= link_to "Delete This Template", deposit_template_path(@deposit_template), :method => :delete, :confirm => "Really delete this template?"

%h2.title
  %span= link_to "Edit", edit_deposit_template_path(@deposit_template)
  Showing
  = @deposit_template.name

.inner
  %p
    %b Name:
    =h @deposit_template.name

  - @deposit_template.deposit_template_fund_percentages.each do |percentage|
    %p
      %b=h percentage.fund.name
      =h "#{ percentage.percentage }%"
