- form_for(@deposit, :html => { :class => "form" }) do |f|
  .group
    = f.label :dollars, "Amount", :class => "label"
    $
    = f.text_field :dollars, :class => "text_field total"

  .group
    = label_tag(:deposit_type, nil, :class => "label")
    = select_tag :deposit_type, deposit_type_options, :id => "deposit_type"

  .deposit_accounts
    - f.fields_for(:deposit_accounts) do |fields|
      .columns.account
        - da = fields.object
        = fields.hidden_field :account_id, :value => da.account_id, :id => "account_#{ da.account_id }"
        = fields.label :percentage, da.account.name, :class => "label"
        .column.left
          .group
            $
            = fields.text_field :dollars, :class => "amount text_field"
        .column.right
          .group
            = fields.text_field :percentage, :class => "percentage text_field"
            \%
      .clear

  .group
    = label_tag(:unallocated, "Total allocated", :class => "label")
    #unallocated.incorrect
      $0.00

  .group.navform
    = submit_button_for(f)
    or 
    = link_to "back", :back
      
