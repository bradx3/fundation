- form_for(@deposit, :html => { :class => "form" }) do |f|
  .group
    = f.label :amount_in_cents, nil, :class => "label"
    = f.text_field :amount_in_cents

  .group
    = label_tag(:deposit_type, nil, :class => "label")
    = select_tag :deposit_type, deposit_type_options

  - f.fields_for(:deposit_accounts) do |fields|
    .columns
      - da = fields.object
      = fields.hidden_field :account_id, :value => da.account.id
      = fields.label :percentage, da.account.name, :class => "label"
      .column.left
        .group
          = fields.text_field :amount_in_cents, :class => "amount text_field"
      .column.right
        .group
          = fields.text_field :percentage, :class => "percentage text_field"
          \%
    .clear

  .group.navform
    = submit_button_for(f)
    or 
    = link_to "back", :back
      
