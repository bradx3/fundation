- form_for(@fund, :html => { :class => "form" }) do |f|
  .group
    = f.label :name, nil, :class => "label"
    = f.text_field :name, :class => "text_field"

  .group
    = f.label :dollars, "Initial balance", :class => "label"
    = f.text_field :dollars, :class => "text_field amount"

  .group.navform
    = f.submit(@fund.new_record? ? "Create" : "Update")